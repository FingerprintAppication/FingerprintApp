<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:weightSum="1"
    android:padding="20dp"
    android:id="@+id/setting"
    android:layout_height="450dp">


    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_marginStart="20dp"
        android:layout_marginTop="100dp"
        android:id="@+id/hour"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="ชม"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="185dp"
        android:layout_toEndOf="@+id/hour"
        android:layout_marginStart="10dp"
        android:id="@+id/textView35"
        android:textColor="@android:color/black" />

    <TextView
        android:text="นาที"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView35"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/minutes"
        android:id="@+id/textView37"
        android:textColor="@android:color/black" />

    <Switch
        android:text="เปิด/ปิด การแจ้งเตือน"
        android:layout_height="wrap_content"
        android:id="@+id/onOff"
        android:layout_weight="0.09"
        android:textAlignment="center"
        android:layout_width="300dp"
        android:layout_marginTop="75dp"

        android:layout_below="@+id/textView35"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/minutes"
        android:layout_marginStart="80dp"
        android:layout_alignBaseline="@+id/hour"
        android:layout_alignBottom="@+id/hour"
        android:layout_toEndOf="@+id/hour" />

    <TextView
        android:text="จำนวนชั่วโมงที่ต้องการเตือนล่วงหน้า"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView38"
        android:paddingTop="10dp"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textColor="@color/colorAccent" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:id="@+id/periodSubect"
        android:textStyle="normal|bold"
        android:textSize="14sp"
        android:textColor="@color/colorAccent"
        android:layout_below="@+id/textView38"
        android:layout_centerHorizontal="true" />
</RelativeLayout>

